<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="2sp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:singleLine="false"
        android:text="Name your courses to customize  your schedule."
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/course1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 1:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:hint="Write Name Here....."
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course1AltToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onAltToggleClick"
                    android:textOff="Alt"
                    android:textOn="Alt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PETextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 2:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course2AltToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onAltToggleClick"
                    android:textOff="Alt"
                    android:textOn="Alt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 3:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course3AltToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onAltToggleClick"
                    android:textOff="Alt"
                    android:textOn="Alt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 4:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course4Name"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course4AltToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onAltToggleClick"
                    android:textOff="Alt"
                    android:textOn="Alt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 5:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course5Name"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course5AltToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onAltToggleClick"
                    android:textOff="Alt"
                    android:textOn="Alt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 6:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course6Name"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course6AltToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onAltToggleClick"
                    android:textOff="Alt"
                    android:textOn="Alt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course 7:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/Course7Name"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:inputType="textPersonName" />

                <ToggleButton
                    android:id="@+id/Course7AltToggle"
                    android:layout_width="wrap_content"
